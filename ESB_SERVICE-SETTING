NOPARALLELCREATE TABLE PTAPMGRUAT.ESB_SERVICE_SETTING 
(
  TRN_CODE VARCHAR2(10 BYTE) NOT NULL 
, SERVICE_NAME VARCHAR2(50 BYTE) NOT NULL 
, SERVICE_VERSION VARCHAR2(2 BYTE) 
, TIMEOUT NUMBER 
, ACCESSIBLE VARCHAR2(2 BYTE) 
, LOGFIELDS VARCHAR2(512 BYTE) 
, SUCCESS_CODES VARCHAR2(100 BYTE) 
, EFFECTIVE_DATE TIMESTAMP(6) 
, OTP_RESULT_CMS_KEY VARCHAR2(20 BYTE) 
, ERROR_CATEGORY VARCHAR2(10 BYTE) 
, CHANNEL_ID VARCHAR2(20 BYTE) 
, CONSTRAINT PK_ESB_SERVICE_SETTING PRIMARY KEY 
  (
    TRN_CODE 
  , SERVICE_NAME 
  )
  ENABLE 
) 
